@model TLH.Models.BalticLeague.ListOfTournaments;
@{
}
<style>
    td:hover{
        background-color: gray
    }
</style>
<h1>Baltic Leauge S0 Scoreboard </h1>



    <table class="table">
        <thead>
            <tr>
                <th width="5%">Placement</th>
                <th width="20%">Team Name</th>
                @if (Model.Tournaments.Count() > 0)
                {
                @foreach (var day in Model.Tournaments.ElementAt(0).Days)
                {
                <th style="text-align:center">@day.Name</th>
                }
                }
                <th style="text-align:center">Kills</th>
                <th style="text-align:center">Total Score</th>
                <th style="text-align:center">Prize Money</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < @Model.Tournaments.Count();i++)
            {
                <tr>
                    <td>@(i+1)</td>
                    <td><a asp-action="TeamDetails" asp-route-id="@Model.Tournaments[i].TeamId" asp-route-tId="@Model.Tournaments[i].TournamentId">@Model.Tournaments[i].TeamName</a></td>
                    @foreach (var day in Model.Tournaments[i].Days)
                    {
                    <td style="text-align:center">@day.TotalScore</td>
                    }
                    <td style="text-align:center">@Model.Tournaments[i].TotalKills</td>
                    <td style="text-align:center">@Model.Tournaments[i].TotalScore</td>
                    <td style="text-align:center">@(Model.Prizes.Count() > i ? Model.Prizes[i].Amount : 0)</td>
                </tr>
            }
        </tbody>
    </table>

