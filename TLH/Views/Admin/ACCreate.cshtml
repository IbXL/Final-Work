@model TLH.Models.Admin.ACCreateViewModel
@{
    ViewBag.Title = "Create";
}


<h1>Create</h1>

<h4>Tournaments</h4>
<hr />
<div class="row">
        <div class="col-md-4">
            <form asp-action="ACCreate">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Number Of Days</label>
                    <input asp-for="NumberOfDays" class="form-control" />
                    <span asp-validation-for="NumberOfDays" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Number Of Matches Per Day</label>
                    <input asp-for="NumberOfMatchesPerDay" class="form-control" />
                    <span asp-validation-for="NumberOfMatchesPerDay" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

